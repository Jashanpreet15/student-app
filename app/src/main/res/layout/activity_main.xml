<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#03A9F4">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#00000000"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:layout_margin="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="80dp"
            android:fontFamily="sans-serif-medium"
            android:text="Student Registeration"
            android:textColor="@color/white"
            android:textSize="23dp">

        </TextView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:background="#00009688"
        android:orientation="vertical"
        android:paddingHorizontal="25sp"
        android:paddingVertical="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.181"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="25dp"
            android:fontFamily="sans-serif-medium"
            android:text="Add Student Detail"
            android:textColor="@color/white"
            android:textSize="18dp"></TextView>

        <EditText
            android:id="@+id/student_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/custome"
            android:hint="Student ID"
            android:textColor="@color/black"
            android:paddingHorizontal="10dp"
            android:textColorHighlight="@color/black"></EditText>

        <EditText
            android:id="@+id/student_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/custome"
            android:hint="Full Name"
            android:paddingHorizontal="10dp"></EditText>

        <EditText
            android:id="@+id/student_age"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/custome"
            android:hint="Age"
            android:paddingHorizontal="10dp"></EditText>

        <EditText
            android:id="@+id/student_add"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/custome"
            android:hint="Address"
            android:paddingHorizontal="10dp"></EditText>

        <EditText
            android:id="@+id/student_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/custome"
            android:hint="Email"
            android:paddingHorizontal="10dp"></EditText>

        <Button
            android:id="@+id/add_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Add Student"
            android:background="#FFC107"
            android:layout_marginTop="20dp"
            ></Button>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>